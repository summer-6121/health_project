<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.health.dao.SetmealDao">
    <!--添加套餐-->
    <insert id="add" parameterType="Setmeal">
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into t_setmeal(name,code,helpCode,sex,age,price,remark,attention,img)
        values( #{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>
    <!--添加套餐和检查组的关系-->
    <insert id="addSetmealCheckGroup" parameterType="int">
        insert into t_setmeal_checkgroup(setmeal_id,checkgroup_id)
        values(#{setmealId},#{checkgroupId})
    </insert>

    <!--根据查询条件查询套餐信息，然后分页展示-->
    <select id="findByCondition" resultType="Setmeal">
        select * from t_setmeal
        <where>
            <if test="value != null and value.length > 0">
                code like #{queryString} or name like #{queryString} or helpCode like #{queryString}
            </if>
        </where>
    </select>

    <!--通过id查询对应套餐的全部信息-->
    <select id="findById" parameterType="int" resultType="Setmeal">
        select * from t_setmeal where id = #{id}
    </select>
    <!--通过id查询选中的检查组Ids-->
    <select id="findCheckGroupIdsBySetmealId" parameterType="int" resultType="int">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>
    
    
    <!--修改套餐信息-->
    <update id="update" parameterType="Setmeal">
        update t_setmeal
          set
            name=#{name},
            code=#{code},
            helpCode=#{helpCode},
            sex=#{sex},
            age=#{age},
            price=#{price},
            remark=#{remark},
            attention=#{attention},
            img=#{img}
        where id=#{id}
    </update>
    <!--删除套餐和检查组之间的旧关系-->
    <delete id="deleteSetmealCheckGroup" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id=#{id}
    </delete>
    
    <!--查询套餐是否被订单使用-->
    <select id="findOrderCountBySetmealId" parameterType="int" resultType="int">
        select count(1) from t_order where setmeal_id=#{id}
    </select>
    <!--根据id删除套餐-->
    <delete id="deleteById" parameterType="int">
        delete from t_setmeal where id=#{id}
    </delete>

    <!--查出数据库中的所有图片-->
    <select id="findImgs" resultType="String">
        select img from t_setmeal
    </select>
</mapper>